<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FEAC | SOVEREIGN COMMAND</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&display=swap');
        body { font-family: 'JetBrains Mono', monospace; background-color: #050505; }
        .glass { background: rgba(15, 15, 15, 0.8); backdrop-filter: blur(10px); border: 1px solid #1f2937; }
        .glow-gold { text-shadow: 0 0 10px #d4af37; }
        ::-webkit-scrollbar { width: 5px; }
        ::-webkit-scrollbar-thumb { background: #d4af37; }
    </style>
</head>
<body class="text-gray-300 p-6">
    <div class="flex justify-between items-center mb-8 border-b border-gray-800 pb-4">
        <div>
            <h1 class="text-3xl font-bold text-white tracking-widest glow-gold">FEAC <span class="text-[#d4af37]">SOVEREIGN</span></h1>
            <p class="text-xs text-gray-500 mt-1">OPERATIONAL PROTOCOL: <span class="text-green-500">ACTIVE</span></p>
        </div>
        <div id="clock" class="text-xl font-bold text-white">00:00:00</div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="glass p-6 rounded-lg border-l-4 border-[#d4af37]">
            <h2 class="text-lg font-bold uppercase mb-4">Vitality</h2>
            <p class="text-xs mb-1 text-gray-400">STATE: <span id="state-text" class="text-[#d4af37]">IDLE</span></p>
            <p class="text-[10px] text-gray-600">UPTIME: <span id="uptime">0</span>s</p>
        </div>

        <div class="glass p-6 rounded-lg col-span-2">
            <h2 class="text-lg font-bold uppercase mb-4">Command Console</h2>
            <div class="grid grid-cols-2 gap-4 text-[10px]">
                <button onclick="executeTask('push')" class="border border-gray-800 p-2 hover:border-[#d4af37]">PUSH CLOUD</button>
                <button onclick="executeTask('audit')" class="border border-gray-800 p-2 hover:border-green-500">RUN AUDIT</button>
                <button onclick="executeTask('rebuild')" class="border border-gray-800 p-2 hover:border-blue-500">REBUILD SYSTEM</button>
                <button onclick="executeTask('aries')" class="border border-gray-800 p-2 hover:border-purple-500">SYNC ARIES</button>
            </div>
        </div>

        <div class="glass p-6 rounded-lg col-span-3 h-64 overflow-hidden">
            <h2 class="text-sm font-bold uppercase mb-2">Audit Feed</h2>
            <div id="log-feed" class="text-[10px] space-y-1 font-mono text-gray-500"></div>
        </div>
    </div>

    <script>
        lucide.createIcons();
        async function fetchPulse() {
            const res = await fetch('/system/pulse');
            const data = await res.json();
            document.getElementById('uptime').innerText = Math.floor(data.uptime);
            document.getElementById('state-text').innerText = data.status.state;
            document.getElementById('log-feed').innerHTML = data.health_report.criticalAlerts.map(l => `<div>> ${l}</div>`).join('');
            document.getElementById('clock').innerText = new Date().toLocaleTimeString();
        }

        async function executeTask(task) {
            const res = await fetch('/system/execute', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ task })
            });
            const data = await res.json();
            console.log("FEAC Response:", data);
        }
        setInterval(fetchPulse, 2000);
    </script>
</body>
</html>
